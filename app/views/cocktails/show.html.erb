<div class="container">
  <h2><%=  @cocktail.name %></h2>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li>
        Ingredient: <%= dose.ingredient.name %>
        <br>
        Dose: <%= dose.description %>
        <br>
        <%= link_to "Delete dose", cocktail_dose_path(@cocktail, dose),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
        </li>
      <% end %>
    </ul>
  <%= link_to "Delete cocktail", cocktail_path(@cocktail), method: :delete,
        data: { confirm: "Are you sure?" } %>
        <br>

  <%= link_to "Add doses", new_cocktail_dose_path(@cocktail.id)  %>
  <br>
  <%= link_to "Back to list", cocktails_path %>
</div>
